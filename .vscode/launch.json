{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python 调试程序: 当前文件目录",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",  
            // "args": ["--model", "gemini_pro","-s","42"],
            // "args": [],
           "args": [
                "run_baseline.py",
                "--envs", "ModularSciFiVillage", "Cabin_Lake",
                "--question_types", "counting", "state",
                "--other-args", "--model gemini_pro --resume"
            ],
            "env": {
                "OPENAI_API_KEY": "${env:ARK_API_KEY}"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python 调试程序: 包含参数的当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",  
            "args": "${command:pickArgs}"
        }
    ]
}